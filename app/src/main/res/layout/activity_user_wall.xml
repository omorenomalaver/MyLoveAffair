<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_user_layout"
    tools:context="com.example.omorenomalaver.myloveaffair.UserWall">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Configuration"
    android:id="@+id/btnConfig"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:onClick="onClickConfig" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnConfig"
        android:id="@+id/contactListframe">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact List"
            android:id="@+id/txtTitle" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listValuesContacts"
            android:layout_below="@+id/txtTitle">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listViewContacts" />
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnExit"
        android:onClick="onClickExit"
        android:layout_below="@+id/contactListframe"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
